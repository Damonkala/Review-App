        <span ng-if="!isAuthenticated()" ng-click="authenticate('facebook')" class="navBut">Facebook Signin</span>
    </div>
    <hr>
    <div ui-view></div>

    <script src="assets/angular/angular.min.js"></script>
    <script src="assets/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="/assets/satellizer/satellizer.min.js"></script>
    <script src="/assets/ngSweetAlert/SweetAlert.min.js"></script>
    <script src="/assets/sweetalert/dist/sweetalert.min.js"></script>

    <script src="bundle.js"></script>
  </body>
</html>
